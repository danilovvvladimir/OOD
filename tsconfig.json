{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true
  },
  "include": [
    "labs/**/*.ts",
    "labs/**/*.node",
    "node_modules/canvas/build/Release/canvas.node"
  ],
  "exclude": ["node_modules"]
}
